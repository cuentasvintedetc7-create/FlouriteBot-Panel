# FlouriteBot Configuration
# Copy this file to .env and fill in your values

# ============================================================================
# TELEGRAM BOT SETTINGS
# ============================================================================

# Telegram Bot Token (get from @BotFather)
BOT_TOKEN=your_bot_token_here

# Admin Telegram ID (your Telegram user ID)
ADMIN_ID=your_telegram_id_here

# ============================================================================
# WEB ADMIN PANEL SETTINGS
# ============================================================================

# Port for web admin panel (default: 4100)
PORT=4100

# JWT Secret for session tokens (IMPORTANT: change in production!)
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Web admin username
WEB_ADMIN_USER=admin

# Web admin password hash (bcrypt)
# Generate with: node -e "console.log(require('bcryptjs').hashSync('yourpassword', 10))"
WEB_ADMIN_HASH=

# Admin email (optional)
ADMIN_EMAIL=admin@flouritebot.store

# ============================================================================
# ENVIRONMENT
# ============================================================================

# Node Environment (development or production)
NODE_ENV=production

# CORS Origin (your domain)
CORS_ORIGIN=https://flouritebot.store
