# FlouriteBot Admin Panel - NGINX Configuration
# Place this file in /etc/nginx/sites-available/flouritebot
# Then create symlink: ln -s /etc/nginx/sites-available/flouritebot /etc/nginx/sites-enabled/

# Rate limiting zone (add to http block in /etc/nginx/nginx.conf if needed)
# limit_req_zone $binary_remote_addr zone=flourite_api:10m rate=10r/s;

upstream flourite_backend {
    server 127.0.0.1:4100;
    keepalive 32;
}

server {
    listen 80;
    server_name flouritebot.store www.flouritebot.store;
    
    # Redirect HTTP to HTTPS
    return 301 https://$server_name$request_uri;
}

server {
    listen 443 ssl http2;
    server_name flouritebot.store www.flouritebot.store;

    # SSL Configuration (get certificates from Let's Encrypt)
    ssl_certificate /etc/letsencrypt/live/flouritebot.store/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/flouritebot.store/privkey.pem;
    
    # Modern SSL configuration
    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_prefer_server_ciphers off;
    ssl_ciphers ECDHE-ECDSA-AES128-GCM-SHA256:ECDHE-RSA-AES128-GCM-SHA256:ECDHE-ECDSA-AES256-GCM-SHA384:ECDHE-RSA-AES256-GCM-SHA384;
    ssl_session_cache shared:SSL:10m;
    ssl_session_timeout 1d;
    ssl_session_tickets off;
    
    # OCSP Stapling
    ssl_stapling on;
    ssl_stapling_verify on;
    resolver 8.8.8.8 8.8.4.4 valid=300s;
    resolver_timeout 5s;
    
    # Security Headers
    add_header X-Frame-Options "SAMEORIGIN" always;
    add_header X-Content-Type-Options "nosniff" always;
    add_header X-XSS-Protection "1; mode=block" always;
    add_header Referrer-Policy "strict-origin-when-cross-origin" always;
    
    # Logging
    access_log /var/log/nginx/flouritebot_access.log;
    error_log /var/log/nginx/flouritebot_error.log;

    # Gzip compression
    gzip on;
    gzip_vary on;
    gzip_proxied any;
    gzip_comp_level 6;
    gzip_types text/plain text/css text/xml application/json application/javascript application/xml+rss application/atom+xml image/svg+xml;

    # Client body size limit
    client_max_body_size 10M;

    # API endpoints - proxy to Node.js
    location /api/ {
        proxy_pass http://flourite_backend;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_cache_bypass $http_upgrade;
        
        # Cookie handling - critical for JWT auth
        proxy_set_header Cookie $http_cookie;
        proxy_pass_header Set-Cookie;
        
        # Timeouts
        proxy_connect_timeout 60s;
        proxy_send_timeout 60s;
        proxy_read_timeout 60s;
        
        # Disable buffering for real-time responses
        proxy_buffering off;
        
        # Rate limiting for API (optional - uncomment if needed)
        # limit_req zone=flourite_api burst=20 nodelay;
    }
    
    # Health check endpoint (no rate limit)
    location /api/health {
        proxy_pass http://flourite_backend;
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        access_log off;
    }
    
    # Static files - let Node handle them with proper caching
    location / {
        proxy_pass http://flourite_backend;
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header Cookie $http_cookie;
        proxy_pass_header Set-Cookie;
        
        # Cache static files at nginx level
        location ~* \.(js|css|png|jpg|jpeg|gif|ico|svg|woff|woff2|ttf|eot)$ {
            proxy_pass http://flourite_backend;
            proxy_http_version 1.1;
            proxy_set_header Host $host;
            expires 7d;
            add_header Cache-Control "public, immutable";
        }
    }
    
    # Deny access to sensitive files
    location ~ /\. {
        deny all;
        return 404;
    }
    
    # Deny direct access to data files
    location ~* \.(json|env|log)$ {
        deny all;
        return 404;
    }
}
